{
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*"
    ],
    "nohoist": [
      "**@types/**",
      "**/react-moment",
      "**/material-ui-pickers",
      "**/react-markdown"
    ]
  },
  "config": {
    "commitizen": {
      "path": "sensenet-kfi-cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "codecov": "^3.1.0",
    "lerna": "^3.5.1",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "ts-jest": "20.*",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "next"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "test": "yarn workspaces run test -- --ci",
    "clean": "lerna clean",
    "fix": "lerna run fix --parallel",
    "lint": "lerna run lint --parallel"
  },
  "jest": {
    "rootDir": ".",
    "projects": [
      "<rootDir>/examples/sn-dms-demo"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.css$": "<rootDir>/jest/cssTransform.js",
      "^.+\\.(png|jpg)$": "<rootDir>/jest/fileTransform.js"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  }
}
