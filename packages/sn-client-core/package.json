{
  "name": "@sensenet/client-core",
  "version": "1.3.1",
  "description": "Core Client package for sensenet",
  "main": "./dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "precommit": "npm run test",
    "commit": "git-cz",
    "pretest": "npm run lint && rimraf temp && tsc -p tsconfig.test.json",
    "test": "rimraf coverage && nyc mocha -p tsconfig.test.json ./temp/test/index.js",
    "prebuild": "npm run lint",
    "fix": "npm run fix:prettier && npm run fix:tslint",
    "fix:prettier": "prettier \"{,!(dist|temp)/**/}*.{ts,tsx}\" --write",
    "fix:tslint": "tslint --fix --project .",
    "lint": "tslint --project .",
    "build": "rimraf dist && tsc -p tsconfig.json",
    "publish:development": "npm run build && npm t && npm run typedoc && npm publish --tag development",
    "prepublishOnly": "npm run test && npm run build",
    "typedoc": "typedoc --mode file --out documentation src --tsconfig tsconfig.json --theme c:/Users/%USERNAME%/AppData/Roaming/npm/node_modules/@sensenet/typedoc-theme/sn-theme"
  },
  "keywords": [
    "sensenet",
    "ecm",
    "javascript",
    "REST",
    "API"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "Sense/Net <snteam@sensenet.com> (http://sensenet.com/)",
  "license": "GPL-2.0",
  "nyc": {
    "exclude": [
      "temp/test/**/*.*",
      "temp/src/**/I*.js",
      "**/index.js"
    ],
    "include": "temp/src/**/*.*",
    "check-coverage": true,
    "cache": true,
    "all": true,
    "reporter": [
      "lcov",
      "text-summary",
      "json"
    ]
  },
  "homepage": "https://sensenet.com",
  "dependencies": {
    "@sensenet/client-utils": "^1.2.0",
    "@sensenet/default-content-types": "^1.1.0",
    "@sensenet/query": "^1.1.0",
    "@types/uuid": "^3.4.4",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "rimraf": "^2.6.2",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "config": {
    "commitizen": {
      "path": "sensenet-kfi-cz-conventional-changelog"
    }
  },
  "typings": "./dist/index.d.ts"
}
